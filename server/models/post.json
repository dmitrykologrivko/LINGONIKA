{
  "name": "Post",
  "plural": "posts",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": true,
      "disableAllExcept": [
        "create",
        "find",
        "findById",
        "replaceById",
        "prototype.patchAttributes",
        "deleteById",
        "postsMeta",
        "prototype.__get__translations",
        "prototype.__create__translations",
        "prototype.__updateById__translations",
        "prototype.__destroyById__translations"
      ]
    }
  },
  "properties": {
    "type": {
      "type": "string",
      "required": true
    },
    "question": {
      "type": "string"
    },
    "comment": {
      "type": "string"
    },
    "fromLanguage": {
      "type": "string",
      "required": true
    },
    "toLanguage": {
      "type": "string",
      "required": true
    },
    "userId": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "translations": {
      "type": "hasMany",
      "model": "Translation",
      "foreignKey": "postId"
    },
    "account": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "postsMeta"
    }
  ],
  "methods": {
    "postsMeta": {
      "accepts": [],
      "returns": [
        {
          "arg": "postTypes",
          "type": "object",
          "root": false,
          "description": "Dictionary of supported post types in the system."
        },
        {
          "arg": "languages",
          "type": "object",
          "root": false,
          "description": "Dictionary of supported languages in the system."
        }
      ],
      "description": "Get posts meta data.",
      "http": [
        {
          "path": "/meta",
          "verb": "get"
        }
      ]
    }
  }
}
