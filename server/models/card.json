{
  "name": "Card",
  "plural": "cards",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": true,
      "disableAllExcept": [
        "create",
        "find",
        "findById",
        "replaceById",
        "prototype.patchAttributes",
        "deleteById",
        "meta"
      ]
    }
  },
  "properties": {
    "phrase": {
      "type": "string",
      "required": true
    },
    "translation": {
      "type": "string",
      "required": true
    },
    "comment": {
      "type": "string"
    },
    "example": {
      "type": "string"
    },
    "fromLanguage": {
      "type": "string",
      "required": true
    },
    "toLanguage": {
      "type": "string",
      "required": true
    },
    "partOfSpeach": {
      "type": "string"
    },
    "isLearned": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {
    "cardsMeta": {
      "accepts": [],
      "returns": [
        {
          "arg": "languages",
          "type": "object",
          "root": false,
          "description": "Dictionary of supported languages in the system."
        },
        {
          "arg": "partsOfSpeech",
          "type": "object",
          "root": false,
          "description": "Dictionary of supported parts of speech in the system."
        }
      ],
      "description": "Get cards meta data.",
      "http": [
        {
          "path": "/meta",
          "verb": "get"
        }
      ]
    }
  }
}
