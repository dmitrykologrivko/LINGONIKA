{
  "name": "Group",
  "plural": "groups",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "SetupRemoteMethods": {
      "ignoreACL": true,
      "disableAllExcept": [
        "create",
        "find",
        "findById",
        "replaceById",
        "prototype.patchAttributes",
        "deleteById",
        "groupsMeta"
      ]
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "fromLanguage": {
      "type": "string",
      "required": true
    },
    "toLanguage": {
      "type": "string",
      "required": true
    },
    "userId": {
      "type": "number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "cards": {
      "type": "hasMany",
      "model": "Card",
      "foreignKey": "groupId"
    },
    "account": {
      "type": "belongsTo",
      "model": "Account",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "groupsMeta"
    }
  ],
  "methods": {
    "groupsMeta": {
      "accepts": [
        {
          "arg": "fromLanguage",
          "type": "string",
          "required": false,
          "description": "From language argument allows filtering countOfLearnedWords by language.",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "toLanguage",
          "type": "string",
          "required": false,
          "description": "To language argument allows filtering countOfLearnedWords by language.",
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": [
        {
          "arg": "languages",
          "type": "object",
          "root": false,
          "description": "Dictionary of supported languages in the system."
        },
        {
          "arg": "countLearnedWords",
          "type": "number",
          "root": false,
          "description": "Count of learned words. Can be filtered by languages."
        }
      ],
      "description": "Get groups meta data.",
      "http": [
        {
          "path": "/meta",
          "verb": "get"
        }
      ]
    }
  }
}
